{
    "name": "coisa/factory",
    "type": "library",
    "description": "Object Factory Utility",
    "license": "MIT",
    "authors": [
        {
            "name": "Felipe SayÃ£o Lobato Abreu",
            "email": "github@felipeabreu.com.br"
        }
    ],
    "require": {
        "php": ">=5.3",
        "coisa/exceptions": "~1.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "coisa/php-cs-fixer": "^1.0",
        "doctrine/annotations": "^1.2",
        "jakub-onderka/php-console-highlighter": "^0.3.2",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.9"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "CoiSA\\Factory\\": "src"
        },
        "files": [
            "config/autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CoiSA\\Factory\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "check": [
            "@test",
            "@sniff",
            "@cs-check"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "sniff": "phpcs",
        "test": "phpunit --color=always"
    }
}
